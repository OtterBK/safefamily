<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_with_bubbleborder_gray"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/device_log_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_with_bubbleborder"
        android:elevation="10sp"
        android:minWidth="400dp"
        android:minHeight="600dp">

        <TableLayout
            android:id="@+id/device_log_table"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg_white"
            android:elevation="10sp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:id="@+id/device_log_table_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/device_log_table_top_lbl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_single_border_with_skyblue"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/lotte_dream"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="날짜"
                    android:textColor="@color/bg_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/device_log_table_top_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_single_border_with_skyblue"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/lotte_dream"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="시간"
                    android:textColor="@color/bg_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/device_log_table_top_lbl3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_single_border_with_skyblue"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/lotte_dream"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="비고"
                    android:textColor="@color/bg_white"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
