<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:scrollbarSize="12dp"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bubbleborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/device_add_lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lotte_happy"
            android:text="회원가입"
            android:textColor="@color/fr_black"
            android:textSize="28sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/register_lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/lotte_happy"
            android:text="아이디"
            android:textColor="@color/skyblue"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/register_input_id"
            app:layout_constraintTop_toBottomOf="@+id/device_add_lbl1" />

        <TextView
            android:id="@+id/register_id_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/elice"
            android:textColor="@color/fr_red"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/register_input_id"
            app:layout_constraintTop_toBottomOf="@+id/register_input_id" />

        <TextView
            android:id="@+id/register_pw_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/elice"
            android:textColor="@color/fr_red"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/register_input_pwcheck"
            app:layout_constraintTop_toBottomOf="@+id/register_input_pwcheck" />

        <TextView
            android:id="@+id/register_lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lotte_happy"
            android:text="비밀번호"
            android:textColor="@color/skyblue"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/register_input_pw"
            app:layout_constraintTop_toBottomOf="@+id/register_input_id" />

        <EditText
            android:id="@+id/register_input_id"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/my_text_field"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/lotte_dream"
            android:hint="아이디 입력"
            android:inputType="textPersonName"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:textColor="@color/fr_black"
            android:textColorHint="@color/bg_softgray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_lbl2" />

        <EditText
            android:id="@+id/register_input_pw"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/my_text_field"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/lotte_dream"
            android:hint="비밀번호(최소 8자리)"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:textColor="@color/fr_black"
            android:textColorHint="@color/bg_softgray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_lbl3" />

        <EditText
            android:id="@+id/register_input_pwcheck"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/my_text_field"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/lotte_dream"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:textColor="@color/fr_black"
            android:textColorHint="@color/bg_softgray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/register_input_pw"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="@+id/register_input_pw"
            app:layout_constraintTop_toBottomOf="@+id/register_input_pw" />

        <Button
            android:id="@+id/register_btn_next"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/ripple_button_skyblue"
            android:fontFamily="@font/elice"
            android:text="다음 단계"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bmdohyeon"
            android:text="계정 정보를 입력해주세요."
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/device_add_lbl1"
            app:layout_constraintTop_toBottomOf="@+id/device_add_lbl1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>