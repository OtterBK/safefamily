<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lotte_happy"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="제목"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/dialog_confirm_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fr_darkGray"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lotte_dream"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="내용"
        android:textColor="@color/fr_black"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/skyblue"
            android:fontFamily="@font/lotte_dream"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/bg_white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_confirm_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/skyblue"
            android:fontFamily="@font/lotte_dream"
            android:gravity="center"
            android:text="취소"
            android:textColor="@color/bg_white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>