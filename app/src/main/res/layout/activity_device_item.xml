<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_white_with_bubbleborder_gray">

            <TextView
                android:id="@+id/device_item_speaker_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:text="대화"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/device_item_door_lbl2"
                app:layout_constraintStart_toEndOf="@+id/device_item_door_lbl2"
                app:layout_constraintTop_toTopOf="@+id/device_item_door_lbl2" />

            <TextView
                android:id="@+id/device_item_speaker_lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:text="회"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/device_item_speaker_count"
                app:layout_constraintStart_toEndOf="@+id/device_item_speaker_count"
                app:layout_constraintTop_toTopOf="@+id/device_item_speaker_count"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/device_item_speaker_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/device_item_speaker_lbl"
                app:layout_constraintStart_toEndOf="@+id/device_item_speaker_lbl"
                app:layout_constraintTop_toTopOf="@+id/device_item_speaker_lbl"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/device_item_image2"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                android:alpha="1"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/right_arrow" />

            <ImageView
                android:id="@+id/device_item_status_image"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/status_safe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_item_ward_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lotte_dream"
                android:textColor="@color/fr_black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/device_item_image2"
                app:layout_constraintStart_toEndOf="@+id/device_item_status_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_item_door_lbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:text="문열림"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/device_item_ward_name"
                app:layout_constraintTop_toBottomOf="@+id/device_item_ward_name" />

            <TextView
                android:id="@+id/device_item_door_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/device_item_door_lbl1"
                app:layout_constraintStart_toEndOf="@+id/device_item_door_lbl1"
                app:layout_constraintTop_toTopOf="@+id/device_item_door_lbl1" />

            <TextView
                android:id="@+id/device_item_door_lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:alpha="0.75"
                android:fontFamily="@font/lotte_dream"
                android:text="회"
                android:textColor="@color/fr_lightblack"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/device_item_door_lbl1"
                app:layout_constraintStart_toEndOf="@+id/device_item_door_count"
                app:layout_constraintTop_toTopOf="@+id/device_item_door_lbl1"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>