<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/dialog_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lotte_happy"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="제목"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/dialog_alert_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fr_darkGray"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lotte_dream"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="내용"
        android:textColor="@color/fr_black"
        android:textSize="16dp" />

</LinearLayout>